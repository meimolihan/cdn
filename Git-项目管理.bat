@echo off
:MENU
cls
echo ==============================
echo Git 项目管理脚本
echo ==============================
echo 1. 检查Git仓库状态
echo 2. 提交并推送更改
echo 3. 拉取远程更新
echo 6. 退出
echo ==============================
set /p choice=请输入选项（1/2/3/6）： 

if "%choice%"=="1" goto CHECK_STATUS
if "%choice%"=="2" goto COMMIT_PUSH
if "%choice%"=="3" goto PULL_UPDATE
if "%choice%"=="6" goto EXIT_SCRIPT

echo 无效选项，请重新选择...
pause
goto MENU

:CHECK_STATUS
echo 正在检查Git仓库状态...
git status
pause
goto MENU

:COMMIT_PUSH
echo 提交并推送更改：
set /p commit_msg=请输入提交信息（直接回车默认为 "update"）： 
if "%commit_msg%"=="" set commit_msg=update

echo 正在添加所有更改到暂存区...
git add .
echo 正在提交更改，提交信息为：%commit_msg%
git commit -m "%commit_msg%"
echo 正在推送更改到远程仓库...
git push
pause
goto MENU

:PULL_UPDATE
echo 正在从远程仓库拉取更新...
git pull
pause
goto MENU

:EXIT_SCRIPT
echo 脚本已退出。
exit